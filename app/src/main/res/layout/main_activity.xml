<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="@mipmap/bottomnavi_naviframe"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_mainpage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/radio_group_selector_mainpage"
            android:text="@string/mainpage"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:textColor="@color/color_radiobutton"
            android:layout_marginTop="5dp"
            android:gravity="center" />


        <RadioButton
            android:id="@+id/rb_dongtai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:textColor="@color/color_radiobutton"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/radio_group_selector_dongtai"
            android:text="@string/dongtai"
            android:gravity="center" />


        <RadioButton
            android:id="@+id/rb_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:textColor="@color/color_radiobutton"
            android:drawableTop="@drawable/radio_group_selector_message"
            android:text="@string/message"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:textColor="@color/color_radiobutton"
            android:text="@string/mine"
            android:layout_marginTop="5dp"
            android:drawableTop="@drawable/radio_group_selector_mine"
            android:gravity="center" />
    </RadioGroup>

</FrameLayout>
